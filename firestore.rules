rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for dots collection
    match /dots/{dotId} {
      // Public read access for portfolio website
      allow read: if true;

      // Admin only: write access for authenticated users
      allow write, create, update, delete: if request.auth != null;

      // Rules for contents sub-collection (if using sub-collections)
      match /contents/{contentId} {
        // Public read access
        allow read: if true;

        // Admin only: write access
        allow write, create, update, delete: if request.auth != null;
      }
    }

    // Rules for top-level contents collection (if using separate collection)
    match /contents/{contentId} {
      // Public read access
      allow read: if true;

      // Admin only: write access for authenticated users
      allow write, create, update, delete: if request.auth != null;
    }
  }
}
